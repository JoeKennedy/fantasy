<h5 .list-group-item-heading>
    <span .scoring-type-name>
        #{show scoringType}
    $if (isRecommendedScoringType scoringType)
        &nbsp;
        <span .label .label-primary>
            Recommended!
    $elseif (isDisabledScoringType scoringType)
        &nbsp;
        <span .label .label-danger>
            Not yet available
<p .list-group-item-text>
    #{scoringTypeDescription scoringType}
