<h5 .list-group-item-heading>
    <span .list-group-item-name>
        #{show draftType}
    $if (isRecommendedDraftType draftType)
        &nbsp;
        <span .label .label-primary>
            Recommended!
    $elseif (isDisabledDraftType draftType)
        &nbsp;
        <span .label .label-danger>
            Not yet available
<p .list-group-item-text>
    #{draftTypeDescription draftType}
